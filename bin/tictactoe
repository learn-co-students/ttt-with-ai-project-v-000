#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Hello! And Welcome to Tic Tac Toe!"
puts "What kind of game would you like to play? 0: For two computer Players, 1: For a user and a computer, or 2: For two users"
input = gets.strip
if input != "0" && input != "1" && input != "2"
  input = gets.strip
elsif input == "0"
  game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
  game.board.display
  game.play
elsif input == "1"
  puts "Who should go first and be 'X'? U: For the user or C: for the computer?"
  input = gets.strip
  if input != "U" && input != "C"
    input = gets.strip
  elsif input == "U"
    game = Game.new(Players::Human.new("X"), Players::Computer.new("O"))
    game.board.display
    game.play
  else
    game = Game.new(Players::Computer.new("X"), Players::Human.new("O"))
    game.board.display
    game.play
  end
else
  puts "Decide between the two users who should go first. When ready they will be 'X'"
  game = Game.new(Players::Human.new("X"), Players::Human.new("O"))
  game.board.display
  game.play
end
