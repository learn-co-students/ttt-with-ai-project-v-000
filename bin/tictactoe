#!/usr/bin/env ruby

require_relative '../config/environment'
require 'pry'

# ```##
# 2. Ai has gets stuck when win combo has less than 2 tokens
# 3. players pick who goes first "X" starts
# 4. Once game is over ask for new players to choose game and tokens

 # ```
def game_start(input)
    if input == "0" || input == "1" || input == "2"
        if input == "2"
            game = Game.new
            game.play
            game.board.reset!
        elsif input == "1"
            game_p_vs_ai = Game.new(Players::Human.new("X"),Players::Computer.new("O"), Board.new)
            game_p_vs_ai.play
            game_p_vs_ai.board.reset!

        elsif input == "0"
            game_ai_vs_ai = Game.new(Players::Computer.new("X"),Players::Computer.new("0"), Board.new)
            game_ai_vs_ai.play
            game_ai_vs_ai.board.reset!

        end
    end
end

def game_replay
    puts "Would you like to play again? (y/n)"
    play_again = gets.strip
     if play_again == "y" || play_again == "Y"
         puts "Which player mode?"
         input = gets.strip
         game_start(input)
     else
         nil
     end
 end

puts "Welcome To Tic Tac Toe!"
play_options = puts "How would you like to play?"
puts "Press 0 for computer vs. computer"
puts "Press 1 for you vs. computer"
puts "Press 2 for you vs. a friend"
play_options

input = gets.strip

game_start(input)

game_replay until game_replay == nil
