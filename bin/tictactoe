#!/usr/bin/env ruby

require_relative '../config/environment'
puts "Hello and welcome to Tic-Tac-Toe!"
puts "Please select number of players: 0, 1, 2"
players = gets.strip
puts "Please choose 'X' or 'O' for first player token"
token = gets.strip.upcase!
def game_type(players, token)
  if players == "0"
    Game.new(Player::Computer.new("X"), Player::Computer.new("O"), Board.new)
  elsif players == "1"
    Game.new(Player::Human.new(token = "X"), Player::Computer.new(token = "O"), Board.new)
  elsif
    Game.new(Player::Human.new(token = "X"), Player::Human.new(token = "O"), Board.new)
  else
    until players == "0" || players == "1" || players == "2"
      puts "Please select number of players: 0, 1, 2"
      players = gets.strip
    end
  end

end
game_type(players, token).play
