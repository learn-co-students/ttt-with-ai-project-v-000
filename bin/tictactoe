#!/usr/bin/env ruby
require 'pry'

require_relative '../config/environment'

puts "Hello! Welcome to Tic-Tac-Toe!"
puts "Would you like to play 0, 1, or 2 players?"
players = gets.strip.to_i

  if players == 2
    Game.new
  elsif players == 1
    puts "Enter 1 to go first and play as X or enter 2 to go second and play as 0"
    Game.new(Players::Human.new("X"), Players::Computer.new("O"))
  else
    Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
  end

  game.play

  puts "Would you like to play again?"

  self
