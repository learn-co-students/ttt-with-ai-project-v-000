#!/usr/bin/env ruby

require_relative '../config/environment'


def start
puts "Welcome to Tic Tac Toe!"
game = Game.new
puts "Please choose 0, 1, or 2 players."
puts "Who will go first?"
player = ""
player = gets.strip
game.play


if game.won?
  puts "Congratulations, you won!"
else
  game.play
end
if game.over?
  puts "Would you like to play again?"
  play_again = ""
  play_again = gets.strip
  if play_again == "y" || play_again == "yes"
    puts "Welcome to Tic Tac Toe!"
    game = Game.new
    puts "Please choose 0, 1, or 2 players."
    puts "Who will go first?"

    game.play
end
end
end
end
