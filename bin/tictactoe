#!/usr/bin/env ruby

require_relative '../config/environment'

def start
  input = gets.chomp
  if input == "1"
    game = Game.new(player_1 = Players::Human.new("X"), player_2 = Players::Computer.new("O"))
    game.play
  elsif input == "2"
    game = Game.new()
    game.play
  elsif input == "0"
    game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Computer.new("O"))
    game.play
  elsif input == "wargames"
    game = Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Computer.new("O"), board = Board.new, wargames = true)
    game.play
  else
    puts "Please enter 0, 1, or 2."
    start
  end
end

puts "Welcome to Tic-Tac-Toe!"
puts "How many players? Enter 0, 1, or 2."
start
