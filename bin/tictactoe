#!/usr/bin/env ruby

require_relative '../config/environment'


puts "Welcome to Tic Tac Toe!"
def start
game = Game.new
 until game.won?
game.play
 end
end

 input = ""
until input.downcase == "n" || input.downcase == "no"
  puts "Would you like to play again?"
  input = gets.strip
  input.downcase == "y" || input.downcase == "yes"
  game = Game.new
 start
end


