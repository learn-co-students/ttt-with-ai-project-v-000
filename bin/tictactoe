#!/usr/bin/env ruby

require_relative '../config/environment'

  prompt = puts "ï½¡*.â‹†âœ§Ëš â–‘Wâ–‘Eâ–‘Lâ–‘Câ–‘Oâ–‘Mâ–‘Eâ–‘ ğ•¥ğ•  ğ•‹ğ•€â„‚-ğ•‹ğ”¸â„‚-ğ•‹ğ•†ğ”¼ ï½¡*.â‹†âœ§Ëš\n
  Please make your selection as follows:\n
    â­‘ Enter 0 for AI Mode (Machine vs. Machine)\n
    â­‘ Enter 1 for 1-Player Mode (Human vs. Machine)\n
    â­‘ Enter 2 for 2-Player Mode (Human vs. Human)\n
    â­‘ Enter 'q' to quit"

input = gets.strip
game = Game.new
game.board.display

while input != "0" || "1" || "2" || "q" || game.over? == true
  prompt

  if input == "q" || game.over? == true
    break
  elsif input == "0"
    game = Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new)
    game.play
  elsif input == "1"
    game = Game.new(Players::Human.new("X"), Players::Computer.new("O"), Board.new)
    game.play
  elsif input == "2"
    game = Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new)
    game.play
  else
    puts "To begin a game, you must first select a mode. \n
          Please enter 0, 1, 2, or 'q'."
    input = gets.strip
  end
end
