#!/usr/bin/env ruby

require_relative '../config/environment'
require 'pry'


def type_of_game
  puts "How many players do you want in your game 0,1, or 2?"
  amount_of_players = gets.strip
  if amount_of_players == 0
    player_1 = Players::Computer.new("X")
    player_2 = Players::Computer.new("O")
  elsif amount_of_players == 1
    # puts "What token do you want to us X or O?"
    # ask_token = gets.strip
    player_1 = Players::Human.new("X")
    player_2 = Players::Computer.new("O")
  elsif amount_of_players == 2
    player_1 = Players::Human.new("X")
    player_2 = Players::Human.new("O")
  # else

  end
end

def who_should_go_first
  # Ask the user for who should go first and be "X".
  puts "Who should go first, X or O?"
  who_goes_first = gets.strip
end

def board
  board = Board.new
end

def play_tic_tac_toe
  # player_1 = Players::Human.new("X"), player_2 = Players::Human.new("O"), board = Board.new)
  # type_of_game
  # who_should_go_first
  board = Board.new
  player_1 = Players::Human.new("X")
  player_2 = Players::Computer.new("O")
  # binding.pry
  game = Game.new(player_1, player_2, board)
  game.play
end

puts "Lets play some Tic Tac Toe!!!"
play_tic_tac_toe
