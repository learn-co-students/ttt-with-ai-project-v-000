#!/usr/bin/env ruby

require_relative '../config/environment'


def tic_tac_toe

  while true
    puts "Welcome to Tic Tac Toe"
    puts "Would you like to play a 0, 1, or 2 person game?"
    game_type = gets.chomp

    case game_type  #need to account for bad input for game_type
    when "0"
      player_1 = Computer.new("X")
      player_2 = Computer.new("O")
    when "1"
      player_1 = Human.new("X")
      player_2 = Computer.new("O")
    when "2"
      player_1 = Human.new("X")
      player_2 = Human.new("O")
    else
      puts "bad input, defaulting to a 1 player game"
      player_1 = Human.new("X")
      player_2 = Computer.new("O")
    end

    game = Game.new(player_1, player_2)
    game.play 

    puts "would you like to play again?  (y/n)"
    again = gets.chomp
    return nil if again == "n"
  end

end

tic_tac_toe
puts "bye"
