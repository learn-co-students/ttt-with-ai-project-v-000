#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Hello, welcome to Tic-Tac-Toe!"
puts "What kind of game would you like to play? (0, 1 or 2 players?)"
input = gets.strip

  if input == "2"
    tic_tac_toe = Game.new
    tic_tac_toe.board.display
    until tic_tac_toe.over?
      tic_tac_toe.play
    end
  elsif input == "1"
    puts "Who will go first? (human or computer)"
    player = gets.strip.downcase
    if player == "human"
      player_1 = Players::Human.new("X")
      player_2 = Players::Computer.new("O")
    else
      player_1 = Players::Computer.new("O")
      player_2 = Players::Human.new("X")
    end
  elsif input == "0"
    player_1 = Players::Computer.new("X")
    player_2 = Players::Computer.new("O")
  end


  tic_tac_toe = Game.new(player_1, player_2)
  tic_tac_toe.board.display
  tic_tac_toe.play
