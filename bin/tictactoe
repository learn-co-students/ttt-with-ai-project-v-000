
#!/usr/bin/env ruby

require_relative '../config/environment'

puts "\nGreetings Earthling!  Welcome to SPACE tic-tac-toe!\n"

puts "\nWill you be playing with 0, 1, 2 players, or WARGAMES?\n"

players = nil
first_player = nil

while players != "0" && players != "1" && players != "2" && players != "WARGAMES"
  players = gets.chomp
  if players != "0" && players != "1" && players != "2" && players != "WARGAMES"
    puts "\nPlease select either '0', '1', '2', or 'WARGAMES'.\n"
  end
end

case players

when "1"

  while first_player != "Hu-mon" && first_player != "Robot"
    puts "\nThe first player will use the 'X' token. Which player shall go first? Please select the 'Hu-mon' or the 'Robot'.\n"
    first_player = gets.chomp
  end

  case first_player

  when "Hu-mon"
    Game.new(Players::Human.new("X"), Players::Computer.new("O")).play
  when "Robot"
    Game.new(Players::Computer.new("X"), Players::Human.new("O")).play
  end

when "2"
    puts "\nThe first player will use the 'X' token\n"
    Game.new

when "0"
  puts "\nPerforming a Robot only simulation\n"
  Game.new(Players::Computer.new("X"), Players::Computer.new("O")).play

when "WARGAMES"
  puts "\nINTER-PLANETARY-WARGAMES\n"
  100.times{Game.new(Players::Computer.new("X"), Players::Computer.new("O")).play}
end
