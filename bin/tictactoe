#!/usr/bin/env ruby

require_relative '../config/environment'

puts "Welcome to Tic Tac Toe!"
play = ""
puts "Would you like to play a game of Tic Tac Toe? Enter yes (y) or no (n)"
play = gets.strip

if play.downcase == "n" || play.downcase == "no"
    exit
else play.downcase == "y" || play.downcase == "yes"
  puts "Would you like to play two player (2), single player (1) or be a spectator (0)?"
  play = gets.strip
  if play == 2
    Game.new(player_1 = Players::Human.new("X"), player_2 = Players::Human.new("O"))
  elsif play == 1
    Game.new(player_1 = Players::Human.new("X"), player_2 = Players::Computer.new("O"))
  else play == 0
    Game.new(player_1 = Players::Computer.new("X"), player_2 = Players::Computer.new("O"))
  end
  until game.won?
    game.play
  end
end
