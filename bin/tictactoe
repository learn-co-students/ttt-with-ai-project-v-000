#!/usr/bin/env ruby

require_relative '../config/environment'

def start
  puts "Welcome to Tic Tac Toe!"
  puts "Would you like 0, 1, or 2 player?"
    user_input = " "
    user_input = gets.chomp
    case user_input
      when user_input == 0
        Players::Computer
      when user_input == 1
        Players::Computer && Players::Human
      when user_input== 2
        Players::Human
    end


  puts "Who is going to be player 1"
    input = gets.chomp
